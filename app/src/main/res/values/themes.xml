<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDoListApp" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/several</item>
        <item name="colorPrimaryVariant">@color/several</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/celeste</item>
        <item name="android:statusBarColor" tools:targetApi="31">@color/celeste</item> <!-- Cambio de color de la barra de estado -->
    </style>

    <style name="Theme.ToDoListApp" parent="Base.Theme.ToDoListApp" />

    <style name="SplashTheme" parent="Base.Theme.ToDoListApp">
        <item name="android:windowBackground">@drawable/splashscreen</item>
        <item name="android:textCursorDrawable">@color/black</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>
    <style name="DatePickerDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorAccent">@color/celeste</item>
    </style>

    <style name="TimePickerDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorAccent">@color/celeste</item>
    </style>
</resources>
