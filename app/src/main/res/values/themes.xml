<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.ToDoListApp" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.ToDoListApp" parent="Base.Theme.ToDoListApp" />
    <style name="SplashTheme" parent="Base.Theme.ToDoListApp">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textCursorDrawable">@color/black</item>
    </style>
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/dialog_bg</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>
    <style name="DatePickerDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorAccent">@color/celeste</item>
    </style>

    <style name="TimePickerDialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="colorAccent">@color/celeste</item>
    </style>
</resources>